@model SW.InternalWeb.Models.Legacy.LegacyRViewModel
@{
    ViewBag.Title = "Legacy Work Order";
    ViewBag.ATitle = "Legacy Work Order";
}

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.WorkOrderLegacyId)
    <div class="panel panel-default">
        <div class="panel-body">
            @Html.HiddenFor(m => m.WorkOrderLegacyId)
            @Html.HiddenFor(m => m.AlreadyResolvedFlag)

            <fieldset class="form-group">
                <legend>Work Order</legend>
                <div class="row">
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.Route, new { @class = "font-bold" })
                        @Html.TextBoxFor(m => m.Route, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.ResolveDate, new { @class = "font-bold" })
                        @Html.TextBoxFor(m => m.ResolveDate, "{0:d}", new { @class = "form-control datepicker-input" })
                    </div>
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.Driver, new { @class = "font-bold" })
                        @Html.TextBoxFor(m => m.Driver, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.ProblemNumber, new { @class = "font-bold" })
                        @Html.TextBoxFor(m => m.ProblemNumber, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.Mileage, new { @class = "font-bold" })
                        @Html.TextBoxFor(m => m.Mileage, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.TransDate, new { @class = "font-bold" })
                        @Html.TextBoxFor(m => m.TransDate, "{0:d}", new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
            </fieldset>
            <fieldset class="form-group">
                <legend>Work Order Details</legend>
                <div class="row">
                    <div class="col-xs-12">
                        @Html.LabelFor(m => m.ProblemDescription, new { @class = "font-bold" })
                        @Html.TextAreaFor(m => m.ProblemDescription, 2, 120, new { @class = "form-control" })
                    </div>
                </div>
            </fieldset>
            <fieldset class="form-group">
                <legend>Record Details</legend>
                <div class="row">
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.AddDate, new { @class = "font-bold" })
                        @Html.TextBoxFor(m => m.AddDate, "{0:d}", new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.AddToi, new { @class = "font-bold" })
                        @Html.TextBoxFor(m => m.AddToi, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.ChgDate, new { @class = "font-bold" })
                        @Html.TextBoxFor(m => m.ChgDate, "{0:d}", new { @class = "form-control", @readonly = "readonly" })
                    </div>
                    <div class="col-xs-2">
                        @Html.LabelFor(m => m.ChgToi, new { @class = "font-bold" })
                        @Html.TextBoxFor(m => m.ChgToi, new { @class = "form-control", @readonly = "readonly" })
                    </div>
                </div>
            </fieldset>
            @if (!Model.AlreadyResolvedFlag)
            {
                <div class="row">
                    <div class="col-xs-2">
                        <button type="submit" class="btn btn-block btn-primary">Update</button>
                    </div>
                </div>
            }
        </div>
    </div>
}
