@model SW.InternalWeb.Models.RouteType.RouteTypeEditViewModel
@using SW.InternalWeb.Extensions
@{
    ViewBag.Title = "Edit Route Type";
    ViewBag.ATitle = "Edit Route Type";
}

@using (Html.BeginForm("Update", "Routetype", FormMethod.Post, new { @class = "form-horizontal" }))
{
    <div class="panel panel-default">
        <div class="panel-body">
            @Html.HiddenFor(model => model.RouteTypeID)
            <div class="row">
                <div class="col-md-9 col-lg-6">
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.RouteNumber, new { @class = "control-label" })*
                        </div>
                        <div class="col-md-8">
                            @Html.TextBoxFor(model => model.RouteNumber, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RouteNumber, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-4">
                            @Html.LabelFor(model => model.Type, new { @class = "control-label" })*
                        </div>
                        <div class="col-md-8">
                            <select asp-for="Type" asp-items="Helpers.RouteTypes" class="form-control"></select>
                            @Html.ValidationMessageFor(model => model.Type, null, new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <div class="form-group">
                        <div class="col-md-12">
                            (* Denotes Required Field)
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <hr />
                        </div>
                        <div class="col-md-8">
                            <div class="row">
                                <div class="col-md-4">
                                    <input class="btn btn-block btn-info" type="submit" value="Update" data-form-action="@Url.Action("Update", "Routetype")" />
                                </div>
                                <div class="col-md-4">
                                    @Html.ActionLink("Back", "Index", null, null, new { @class = "btn btn-block btn-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
