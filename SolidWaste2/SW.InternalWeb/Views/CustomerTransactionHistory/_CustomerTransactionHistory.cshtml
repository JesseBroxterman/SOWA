@model SW.InternalWeb.Models.CustomerTransactionHistory.CustomerTransactionHistoryViewModel
@using SW.InternalWeb.Extensions
<div class="row">
    <div class="col-md-12">
        <table id="transactions" class="table table-striped table-bordered" cellspacing="0">
            <thead>
                <tr>
                    <th></th>
                    <th>Add Date Time</th>
                    <th>Transaction Code | Description</th>
                    <th>Check Number</th>
                    <th>Amount</th>
                    <th>Balance</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

<div class="row">
    <div class="col-md-3">
        <a class="btn btn block btn-success" href="@Url.Action("Index", "Transaction", new { customerID = Model.CustomerID })">Additional Service Charge</a>
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <hr />
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm("TransactionsbyDateRange", "Reports"))
        {
            @Html.HiddenFor(m => m.CustomerID)
            <div class="row">
                <div class="col-xs-3">
                    @Html.LabelFor(m => m.startDate)
                    @Html.TextBoxFor(m => m.startDate, new { @class = "form-control datepicker-input"})
                </div>
                <div class="col-xs-3">
                    @Html.LabelFor(m => m.endDate)
                    @Html.TextBoxFor(m => m.endDate, new { @class = "form-control datepicker-input" })
                </div>
                <div class="col-xs-2">
                    <label>&nbsp;</label>
                    <input type="submit" class="btn btn-success" value="Print Transactions" />
                </div>
            </div>
        }
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        <hr />
    </div>
</div>
