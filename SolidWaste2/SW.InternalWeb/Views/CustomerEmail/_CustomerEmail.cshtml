    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Type, new { @class = "control-label font-bold" })
                </div>
                <div class="col-md-9">
                    <select asp-for="Type" asp-items="Helpers.EmailTypes" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Email1, new { @class = "control-label font-bold" }) *
                </div>
                <div class="col-md-9">
                    @Html.TextBoxFor(model => model.Email1, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.PaperLess, new { @class = "control-label font-bold" })
                </div>
                <div class="col-md-9">
                    <select asp-for="PaperLess" asp-items="Helpers.DeliveryOptions" class="form-control"></select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    @Html.LabelFor(model => model.Status, new { @class = "control-label font-bold" })
                </div>
                <div class="col-md-9">
                    <select asp-for="Status" asp-items="Helpers.EmailStatuses" class="form-control"></select>
                </div>
            </div>
