        <div class="col-md-12">
            <hr />
        </div>
        <div class="col-md-8">
            <div class="row">
                @if (Model.Id.HasValue)
                {
                    <div class="col-md-4">
                        <input class="btn btn-block btn-danger" type="submit" value="Update" data-form-action="@Url.Action("Update", "CustomerEmail")" />
                    </div>
                }
                else
                {
                    <div class="col-md-4">
                        <input class="btn btn-block btn-danger" type="submit" value="Add New Email" data-form-action="@Url.Action("Add", "CustomerEmail")" />
