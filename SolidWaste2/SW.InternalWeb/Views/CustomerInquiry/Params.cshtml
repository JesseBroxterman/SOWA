@model SW.InternalWeb.Models.CustomerInquiry.CustomerInquiryParametersViewModel

@using (Html.BeginForm("Search", "CustomerInquiry", FormMethod.Get))
{
    <div class="panel panel-default">
        <div class="panel-body">
            <div class="row form-group">
                <div class="col-md-3">
                    @Html.LabelFor(m => m.CustomerNumber, new { @class = "font-bold" })
                    @Html.TextBoxFor(m => m.CustomerNumber, new { @class = "form-control" })
                </div>
                <div class="col-md-3">
                    @Html.LabelFor(m => m.LocationName, new { @class = "font-bold" })
                    @Html.TextBoxFor(m => m.LocationName, new { @class = "form-control" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.CustomerName, new { @class = "font-bold" })
                    @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control" })
                </div>
            </div>
            <div class="row form-group">
                <div class="col-xs-2">
                    @Html.LabelFor(m => m.PIN, new { @class = "font-bold" })
                    @Html.TextBoxFor(m => m.PIN, new { @class = "form-control" })
                </div>
                <div class="col-md-5">
                    @Html.LabelFor(m => m.CustomerAddress, new { @class = "font-bold" })
                    @Html.TextBoxFor(m => m.CustomerAddress, new { @class = "form-control" })
                </div>
                <div class="col-md-5">
                    @Html.LabelFor(m => m.LocationAddress, new { @class = "font-bold" })
                    @Html.TextBoxFor(m => m.LocationAddress, new { @class = "form-control" })
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-12">
                    @Html.CheckBoxFor(m => m.Include, new { @class = "checkbox-inline" })
                    @Html.LabelFor(m => m.Include, new { @class = "font-bold" })
                    (Include Inactive Customers)
                </div>
            </div>

            <div class="row form-group">
                <div class="col-md-12">
                    (At Least One Field is Required to Search)
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <button type="submit" name="Command" value="search" class="btn btn-primary">Search</button>
                    <button type="submit" name="Command" value="clear" class="btn btn-info">Clear</button>
                </div>
            </div>

        </div>
    </div>
    <br />
    <br />
}
