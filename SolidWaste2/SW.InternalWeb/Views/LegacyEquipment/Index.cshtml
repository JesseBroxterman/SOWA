@model List<SW.InternalWeb.Models.LegacyEquipment.LegacyEquipmentListViewModel>
@{
    ViewBag.Title = "Legacy Equipment";
    ViewBag.ATitle = "Legacy Equipment";
}

<table id="LegacyEquipmentList" class="table table-striped table-bordered" cellspacing="0">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().EquipmentNumber)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().EquipmentYear)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().EquipmentMake)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().EquipmentModel)</th>
            <th>@Html.DisplayNameFor(model => model.FirstOrDefault().EquipmentVIN)</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            @Html.HiddenFor(model => model[i].EquipmentLegacyID)
            <tr>
                <td>
                    <a class="text-ul" href="@Url.Action("Detail", "LegacyEquipment", new { id = Model[i].EquipmentLegacyID })"> @Html.DisplayFor(model => model[i].EquipmentNumber)</a>
                </td>
                <td>
                    @Html.DisplayFor(model => model[i].EquipmentYear)
                </td>
                <td>
                    @Html.DisplayFor(model => model[i].EquipmentMake)
                </td>
                <td>
                    @Html.DisplayFor(model => model[i].EquipmentModel)
                </td>
                <td>
                    @Html.DisplayFor(model => model[i].EquipmentVIN)
                </td>
            </tr>
        }
    </tbody>
</table>

<br />
<br />
<br />
<br />

@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            table = $('#LegacyEquipmentList').dataTable({
                "order": [[0, "asc"]],
                stateSave: true
            });
        });
    </script>
}
