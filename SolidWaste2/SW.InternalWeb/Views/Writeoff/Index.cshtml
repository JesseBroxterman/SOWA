@model IEnumerable<SW.DM.Transaction>
@{
    ViewBag.Title = "Write-offs";
    ViewBag.ATitle = "Write-offs";
}

<table id="results" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Name</th>
            <th>Collections</th>
            <th>Counselors</th>
            <th>Uncollectable</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="inquiryresultsrecord">
                <td>@Html.ActionLink(item.CustomerId.ToString(), "Create", new { customerId = item.CustomerId }, new { @class = "btn btn-sm btn-primary" })</td>
                <td>@item.Customer.PersonEntity.FullName</td>
                <td>@string.Format("{0:c}", item.CollectionsBalance)</td>
                <td>@string.Format("{0:c}", item.CounselorsBalance)</td>
                <td>@string.Format("{0:c}", item.UncollectableBalance)</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $(document).ready(function () {
                $("#results").DataTable({ "order": [[0, "asc"]] });
            })
        });
    </script>
}
