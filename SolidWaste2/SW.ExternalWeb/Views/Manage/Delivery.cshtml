@model SW.ExternalWeb.Models.Manage.DeliveryViewModel
@{
    ViewBag.Title = "Manage Your Bill Delivery Options";
}

@using (Html.BeginForm("Delivery", "Manage", FormMethod.Post, new { @role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="col-xs-12">
        <div class="row">
            <h2>Bill Delivery Options</h2>
            <div class="col-xs-12 manageaccountcontainer">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 manageaccountbody">
                        <div class="row">
                            <div class="col-xs-12">
                                <h3>Select an Option</h3>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <hr class="col-xs-margin-bottom-0 col-xs-margin-top-0" />
                        </div>
                        <div class="col-xs-12">
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.DeliveryOption, "1", new { @class = "radio" })
                                    Email billing only
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.DeliveryOption, "2", new { @class = "radio" })
                                    Paper billing only
                                </label>
                            </div>
                            <div class="radio">
                                <label>
                                    @Html.RadioButtonFor(m => m.DeliveryOption, "3", new { @class = "radio" })
                                    Email and paper billing
                                </label>
                            </div>
                        </div>
                        <div class="col-xs-12">
                            <hr class="col-xs-margin-top-0" />
                        </div>
                        <div class="row form-group">
                            <div class="col-xs-6 halfpad-xs-right">
                                <input type="button" value="Cancel" class="btn btn-block btn-default btn-lg" redirect="@Url.Action("Index", "Manage")" />
                            </div>
                            <div class="col-xs-6 halfpad-xs-left">
                                <input type="submit" value="Save" class="btn btn-block btn-primary btn-lg" data-form-action="@Url.Action("Delivery", "Manage")" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
