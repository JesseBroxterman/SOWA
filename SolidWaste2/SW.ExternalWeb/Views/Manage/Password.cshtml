@model SW.ExternalWeb.Models.Manage.PasswordViewModel
@{
    ViewBag.Title = "Manage Your Password";
}

@using (Html.BeginForm("Password", "Manage", FormMethod.Post, new { @role = "form" }))
{
    @Html.AntiForgeryToken()
    <div class="col-xs-12">
        <div class="row">
            <h2>Manage Password</h2>
            <div class="col-xs-12 manageaccountcontainer">
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 manageaccountbody">
                        <div class="row">
                            <div class="col-xs-12">
                                <h3>Current Password</h3>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-xs-12">
                                @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", @placeholder = "Current password" })
                                @Html.ValidationMessageFor(m => m.OldPassword)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-8">
                                <h3>New Password</h3>
                            </div>
                            <div class="col-xs-4">
                                <input id="shownewpassword" type="checkbox" onchange="document.getElementById('newpassword').type = this.checked ? 'text' : 'password'" style="float:right;">
                                <label labelfor="shownewpassword" style="float:right;">Show Password &nbsp;</label>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-xs-12">
                                @Html.PasswordFor(m => m.NewPassword, new { @id = "newpassword", @style = "password", @class = "form-control", @placeholder = "New password" })
                                @Html.ValidationMessageFor(m => m.NewPassword)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <div class="row">
                                    <div class="col-xs-8">
                                        <h3>Confirm Password</h3>
                                    </div>
                                    <div class="col-xs-4">
                                        <input id="showconfirmpassword" type="checkbox" onchange="document.getElementById('confirmpassword').type = this.checked ? 'text' : 'password'" style="float:right;">
                                        <label labelfor="showconfirmpassword" style="float:right;">Show Password &nbsp;</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-xs-12">
                                @Html.PasswordFor(m => m.ConfirmPassword, new { @id = "confirmpassword", @style = "password", @class = "form-control", @placeholder = "Confirm new password" })
                                @Html.ValidationMessageFor(m => m.ConfirmPassword)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-12">
                                <hr class="col-xs-margin-top-0 col-xs-margin-bottom-10" />
                            </div>
                        </div>
                        <div class="row form-group">
                            <div class="col-xs-6 halfpad-xs-right">
                                <input type="button" value="Cancel" class="btn btn-block btn-default btn-lg" redirect="@Url.Action("Index", "Manage")" />
                            </div>
                            <div class="col-xs-6 halfpad-xs-left">
                                <input type="submit" value="Save" class="btn btn-block btn-primary btn-lg" data-form-action="@Url.Action("Password", "Manage")" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
