<div id="lrgscreens" class="">
    @*<div id="lrgscreens" class="hidden-xs hidden-sm hidden-md visible-lg">*@
    <div class="row" style="margin-right: -27px; margin-top: 0px; margin-bottom: 0px; margin-left:5px">
        <div class="col-xs-12 col-md-4">
            <div class="row" style="max-height:20px; overflow:hidden">
                <font color="black" style="font-size:large">
                    Hello,
                </font>
                <font color="blue" style="font-weight:bold; font-size:15px">
                    @Model.UserName
                </font>
            </div>
            <div class="row">
                <font style="font-weight:bold; color:black; font-size:15px">
                    Account #: @Model.AccountNumber
                </font>
            </div>
            <div class="row">
                @if (Model.PastDueBalance == null || Model.PastDueBalance == "$0.00" || Model.PastDueBalance == "0" || Model.PastDueBalance == "0.00")
                {
                    <div class="col-xs-12"></div>
                }
                else
                {
                    <div class="col-xs-12">
                        <div class="row">
                            <font color="red" style="font-weight:bold">
                                Past Due Amount: @Model.PastDueBalance
                            </font>
                        </div>
                    </div>
                }
            </div>
        </div>
        <div class="col-xs-12 col-md-8" style="margin-top:-5px;">
            <a href="@Url.Action("Logoff","Account")" style="color:white;">
                <div id="Logofftrapezoid" class="row" style="float:right; position:relative; font-size:14px; transform:rotate(180deg); margin-left:-25px; margin-right:-14px;">
                    <div class="row" style="padding-bottom:15px; margin-left:5px; transform:rotate(180deg); padding-left:30px;">
                        Logout
                    </div>
                </div>
            </a>
            <div id="manageaccountribbonbutton">
                @if (Model.CurrentController == "Manage")
                {
                    <a href="@Url.Action("Index","Manage")">
                        <div id="parallelogram" class="col-xs-3" style="float:right; font-size:14px; background-color:#337ab7"
                             onmouseover="document.getElementById('managetooltipmessage').style.display = 'block';"
                             onmouseout="document.getElementById('managetooltipmessage').style.display = 'none';">
                            <div class="row" style="margin-left:10px; margin-right:8px; margin-top:5px; text-align:right; color:white; transform:skew(-45deg)">
                                Manage Account
                            </div>
                        </div>
                    </a>
                }
                else
                {
                    <a href="@Url.Action("Index","Manage")">
                        <div id="parallelogram" class="col-xs-3" style="float:right; font-size:14px;"
                             onmouseover="document.getElementById('managetooltipmessage').style.display = 'block';"
                             onmouseout="document.getElementById('managetooltipmessage').style.display = 'none';">
                            <div class="row" style="margin-left:10px; margin-right:8px; margin-top:5px; text-align:right; color:white; transform:skew(-45deg)">
                                Manage Account
                            </div>
                        </div>
                    </a>
                }
            </div>
            <div id="accounthomeribbonbutton">
                @if (Model.CurrentController == "Home")
                {
                    <a href="@Url.Action("BillSummary","Home")">
                        <div id="parallelogram" class="col-xs-3" style="float:right; font-size:14px; background-color:#337ab7;"
                             onmouseover="document.getElementById('accounttooltipmessage').style.display = 'block';"
                             onmouseout="document.getElementById('accounttooltipmessage').style.display = 'none';">
                            <div class="row" style="margin-left:10px; margin-right:8px; margin-top:5px; text-align:right; color:white; transform:skew(-45deg)">
                                Account Home
                            </div>
                        </div>
                    </a>
                }
                else
                {
                    <a href="@Url.Action("BillSummary","Home")">
                        <div id="parallelogram" class="col-xs-3" style="float:right; font-size:14px;"
                             onmouseover="document.getElementById('accounttooltipmessage').style.display = 'block';"
                             onmouseout="document.getElementById('accounttooltipmessage').style.display = 'none';">
                            <div class="row" style="margin-left:10px; margin-right:8px; margin-top:5px; text-align:right; color:white; transform:skew(-45deg)">
                                Account Home
                            </div>
                        </div>
                    </a>
                }
            </div>
            <div class="col-xs-12" style="margin-top:-0px; margin-bottom:0px">
                <div id="trapezoid" class="col-xs-3">
                    <div class="tooltipmessage" id="accounttooltipmessage" style="display: none">
                        <div class="row" style="transform:rotate(180deg)">
                            <div class="row nav-message">
                                Make Payments
                            </div>
                        </div>
                    </div>
                    <div class="tooltipmessage" id="managetooltipmessage" style="display: none">
                        <div class="row" style="transform:rotate(180deg)">
                            <div class="row nav-message">
                                Edit Account
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

